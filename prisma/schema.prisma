generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  name     String?
  email    String    @unique
  password String
  sessions Session[]
  ips      IP[]
}

model Session {
  id      String @id @default(cuid())
  token   String
  userId  String
  user    User    @relation(fields: [userId], references: [id])
  ipId    String?
  ip      IP?     @relation(fields: [ipId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime
  lastActiveAt DateTime @default(now()) // Last activity timestamp to track idleness
}

model IP {
  id      String    @id @default(cuid())
  ip      String    @unique
  userId  String
  location Location   
  user    User      @relation(fields: [userId], references: [id])
  sessions Session[]
}

enum Location{
  WFO
  WFH
}